<?xml version="1.0" encoding="UTF-8"?>
<ruleset name="Inviqa">
    <description>Inviqa Magento2 PSR12 codesniffer configuration</description>

    <rule ref="PSR12"/>

    <file>./src</file>

    <exclude-pattern>*/Standards/*/Tests/*\.(inc|css|js)</exclude-pattern>

    <config name="installed_paths" value="vendor/slevomat/coding-standard" />

    <rule ref="Generic.Files.LineLength">
        <properties>
            <property name="lineLimit" value="180" />
            <property name="absoluteLineLimit" value="250" />
        </properties>
    </rule>

    <rule ref="PSR2.Methods.MethodDeclaration.Underscore">
        <severity>0</severity>
    </rule>

    <rule ref="PSR2.Classes.PropertyDeclaration.Underscore">
        <severity>0</severity>
    </rule>

    <rule ref="Squiz.WhiteSpace.SuperfluousWhitespace">
        <properties>
            <property name="ignoreBlankLines" value="false"/>
        </properties>
    </rule>

    <rule ref="SlevomatCodingStandard.Commenting" />

    <rule ref="SlevomatCodingStandard.Commenting.DisallowOneLinePropertyDocComment">
        <severity>0</severity>
    </rule>

    <rule ref="SlevomatCodingStandard.Commenting.RequireOneLinePropertyDocComment" />

    <rule ref="SlevomatCodingStandard.Commenting.DocCommentSpacing">
        <properties>
            <property name="linesCountBetweenDescriptionAndAnnotations" value="1" />
            <property name="linesCountBetweenDifferentAnnotationsTypes" value="1" />
        </properties>
    </rule>

    <rule ref="SlevomatCodingStandard.Commenting.ForbiddenAnnotations">
        <properties>
            <property name="forbiddenAnnotations" type="array">
                <element value="@author" />
                <element value="@package" />
            </property>
        </properties>
    </rule>

    <rule ref="SlevomatCodingStandard.Classes.ClassConstantVisibility" />

    <rule ref="SlevomatCodingStandard.TypeHints.DeclareStrictTypes">
        <properties>
            <property name="newlinesCountBetweenOpenTagAndDeclare" value="2"/>
            <property name="spacesCountAroundEqualsSign" value="0"/>
        </properties>
    </rule>

    <arg name="extensions" value="php" />
    <arg name="report" value="full" />
    <arg value="s" />
</ruleset>
