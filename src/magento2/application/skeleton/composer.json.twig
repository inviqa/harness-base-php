{
    "name": "{{ @('workspace.name') }}",
    "type": "project",
    "license": "proprietary",
    "require": {
        "magento/product-{{ @('magento.edition') }}-edition": "2.3.2",
        "composer/composer": "@alpha"
    },
    "require-dev": {
        "behat/behat": "^3.4",
        "behat/mink": "^1.7",
        "behat/mink-extension": "^2.3",
        "behat/mink-goutte-driver": "^1.2",
        "bex/behat-magento2-init": "^1.0",
        "ciaranmcnulty/behat-stepthroughextension": "^1.0",
        "dmore/behat-chrome-extension": "^1.3",
        "dmore/chrome-mink-driver": "^2.6",
        "friends-of-behat/context-service-extension": "^1.2",
        "friends-of-behat/cross-container-extension": "^1.1",
        "friendsofphp/php-cs-fixer": "^2.13",
        "inviqa/phpstan-magento2": "~0.1.1",
        "lusitanian/oauth": "~0.8.10",
        "nagno/phpspec-bootstrap-magento2": "^2.0",
        "pdepend/pdepend": "^2.5",
        "phpmd/phpmd": "@stable",
        "phpspec/phpspec": "^4.0",
        "phpstan/phpstan": "~0.11.5",
        "phpunit/phpunit": "^6.5",
        "sebastian/diff": "^2.0.1",
        "sebastian/phpcpd": "^3.0",
        "sensiolabs/behat-page-object-extension": "^2.1",
        "squizlabs/php_codesniffer": "^3.3",
        "slevomat/coding-standard": "^5.0"
    },
    "autoload": {
        "psr-4": {
            "Magento\\Framework\\": "lib/internal/Magento/Framework/",
            "Magento\\Setup\\": "setup/src/Magento/Setup/",
            "Magento\\": "app/code/Magento/",
            "Zend\\Mvc\\Controller\\": "setup/src/Zend/Mvc/Controller/"
        },
        "psr-0": {
            "": [
                "src/",
                "app/code/"
            ]
        },
        "files": [
            "app/etc/NonComposerComponentRegistration.php"
        ],
        "exclude-from-classmap": [
            "**/dev/**",
            "**/update/**",
            "**/Test/**"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Acceptance\\": "features/bootstrap",
            "Magento\\Sniffs\\": "dev/tests/static/framework/Magento/Sniffs/",
            "Magento\\Tools\\": "dev/tools/Magento/Tools/",
            "Magento\\Tools\\Sanity\\": "dev/build/publication/sanity/Magento/Tools/Sanity/",
            "Magento\\TestFramework\\Inspection\\": "dev/tests/static/framework/Magento/TestFramework/Inspection/",
            "Magento\\TestFramework\\Utility\\": "dev/tests/static/framework/Magento/TestFramework/Utility/"
        }
    },
    "minimum-stability": "stable",
    "repositories": [
        {
            "type": "composer",
            "url": "https://repo.magento.com/"
        }
    ],
    "extra": {
        "magento-force": "override"
    },
    "scripts": {
        "test": [
            "@test-quality",
            "@test-unit",
            "@test-acceptance"
        ],
        "test-quality": [
            "phpcs -v",
            "phpstan analyse",
            "phpmd ./src text ./phpmd.xml"
        ],
        "test-unit": [
            "phpspec run"
        ],
        "test-acceptance": [
            "behat"
        ]
    },
    "config": {
        "bin-dir": "bin"
    }
}
