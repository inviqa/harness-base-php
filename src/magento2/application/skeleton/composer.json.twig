{
    "name": "{{ @('workspace.name')|lower }}/magento2",
    "type": "project",
    "license": "proprietary",
    "require": {
        "php": ">=7.2",
        "magento/product-{{ @('magento.edition') }}-edition": "2.3.5-p2",
        "composer/composer": "@alpha"
    },
    "require-dev": {
        "behat/behat": "^3.5",
        "behat/mink-extension": "^2.3",
        "behat/mink-goutte-driver": "^1.2",
        "bex/behat-magento2-extension": "^2.1",
        "dmore/behat-chrome-extension": "^1.3",
        "dmore/chrome-mink-driver": "^2.7",
        "phpcompatibility/php-compatibility": "dev-master",
        "phpmd/phpmd": "^2.7",
        "phpspec/phpspec": "^6.0",
        "phpstan/phpstan": "^0.12",
        "phpunit/phpunit": "^8.4",
        "sensiolabs/behat-page-object-extension": "^2.3",
        "slevomat/coding-standard": "^6.0",
        "squizlabs/php_codesniffer": "^3.5"
    },
    "config": {
        "bin-dir": "bin",
        "sort-packages": true,
        "platform": {
            "php": "7.2.30"
        }
    },
    "extra": {
        "magento-force": "override"
    },
    "autoload": {
        "psr-4": {
            "Magento\\Framework\\": "lib/internal/Magento/Framework/",
            "Magento\\Setup\\": "setup/src/Magento/Setup/",
            "Magento\\": "app/code/Magento/",
            "Zend\\Mvc\\Controller\\": "setup/src/Zend/Mvc/Controller/",
            "": "src/"
        },
        "files": [
            "app/etc/InviqaNonComposerComponentRegistration.php"
        ],
        "exclude-from-classmap": [
            "**/dev/**",
            "**/update/**",
            "**/Test/**"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Magento\\Sniffs\\": "dev/tests/static/framework/Magento/Sniffs/",
            "Magento\\Tools\\": "dev/tools/Magento/Tools/",
            "Magento\\Tools\\Sanity\\": "dev/build/publication/sanity/Magento/Tools/Sanity/",
            "Magento\\TestFramework\\Inspection\\": "dev/tests/static/framework/Magento/TestFramework/Inspection/",
            "Magento\\TestFramework\\Utility\\": "dev/tests/static/framework/Magento/TestFramework/Utility/",
            "Inviqa\\Acceptance\\": "features/bootstrap"
        }
    },
    "repositories": [
        {
            "type": "composer",
            "url": "https://repo.magento.com/"
        }
    ],
    "minimum-stability": "stable",
    "scripts": {
        "test": [
            "@test-quality",
            "@test-unit",
            "@test-acceptance"
        ],
        "test-quality": [
            "find src/ pub/ -type f \\( -name '*.phtml' -o -name '*.php' \\) | xargs -n 1 -P 8 -i php -l {} | grep -v 'No syntax errors detected' || echo 'OK'",
            "phpcs -p",
            "phpstan analyse",
            "phpmd ./src text ./phpmd.xml"
        ],
        "test-unit": [
            "phpspec run"
        ],
        "test-acceptance": [
            "behat"
        ],
        "fix-code": [
            "phpcbf -p"
        ],
        "compatibility": "bin/phpcs -s --standard=vendor/phpcompatibility/php-compatibility/PHPCompatibility/ --runtime-set testVersion 7.2-"
    }
}
