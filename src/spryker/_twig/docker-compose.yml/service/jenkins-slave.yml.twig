  jenkins-slave:
{% if @('app.build') == 'dynamic' %}
    build:
      context: ../
      dockerfile: .my127ws/docker/image/jenkins-slave/Dockerfile
    entrypoint: /entrypoint.jenkins_slave.dynamic.sh
    volumes:
      - {{ (dockersync) ? @('workspace.name') ~ '-sync:/app:nocopy' : '../:/app:delegated' }}
      - ./application:/home/build/application
      - ./docker/image/console/root/lib/task:/lib/task
{% else %}
    image: {{ @('docker.repository') ~ ':' ~ @('app.version') ~ '-jenkins-slave' }}
{% endif %}
    depends_on:
      - console
      - jenkins
    environment:
      <<: *APP_ENV_VARS
      JENKINS_SLAVE_NAME: backend
      JENKINS_URL: http://${JENKINS_HOST}:${JENKINS_PORT}/
    networks:
      - private
    labels:
      - traefik.enable=false
