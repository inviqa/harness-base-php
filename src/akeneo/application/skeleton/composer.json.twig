{
  "name": "{{ @('workspace.name')|lower }}/akeneo",
  "description": "Akeneo site for {{ @('workspace.name')|lower }}",
  "type": "project",
  "license": "proprietary",
  "autoload": {
    "psr-0": {
      "": "src/"
    },
    "psr-4": {
      "Pim\\Upgrade\\": "upgrades/"
    },
    "exclude-from-classmap": [
      "vendor/akeneo/pim-community-dev/src/Kernel.php"
{%- if @('akeneo.edition') == 'enterprise' %},
      "vendor/akeneo/pim-enterprise-dev/src/Kernel.php"
{%- endif %}
    ]
  },
  "autoload-dev": {
    "psr-4": {
      "AkeneoTest\\": "vendor/akeneo/pim-community-dev/tests/back",
{% if version_compare(@('akeneo.major_version'), '7', '>=') %}
      "Akeneo\\Catalogs\\Test\\": "vendor/akeneo/pim-community-dev/components/catalogs/back/tests",
      "Akeneo\\Connectivity\\Connection\\Tests\\": "vendor/akeneo/pim-community-dev/src/Akeneo/Connectivity/Connection/back/tests",
{% endif %}
      "App\\Acceptance\\": "features/bootstrap"
    }
  },
{%- if @('akeneo.edition') == 'enterprise' %}
  "repositories": {
    "akeneo": {
      "type": "vcs",
      "url": "ssh://git@distribution.akeneo.com:443/{{ @('akeneo.enterprise.distribution.project_name') }}.git",
      "no-api": true
    }
  },
{%- endif %}
  "require": {
    "php": ">= {{ @('php.version') }}",
    "akeneo/pim-{{ @('akeneo.edition') }}-dev": "^{{ @('akeneo.major_version') }}.0.0",
    "symfony/console": "*, !=5.4.35, !=6.3.12, !=6.4.3, !=7.0.3"
  },
  "require-dev": {
    "behat/behat": "^3.12",
    "dmore/behat-chrome-extension": "^1.4",
    "dmore/chrome-mink-driver": "^2.8",
{% if version_compare(@('akeneo.major_version'), '5', '>=') %}
    "behat/mink-browserkit-driver": "^2.1",
    "friends-of-behat/mink-extension": "^2.7",
    "friends-of-behat/symfony-extension": "^2.4",
    "symfony/http-client": "^4.4 || ^5.0 || ^6.0 || ^7.0",
{% endif %}
    "phpcompatibility/php-compatibility": "dev-develop",
    "phpmd/phpmd": "^2.13",
    "phpspec/phpspec": "^7.3",
    "phpstan/phpstan": "^1.9",
    "phpunit/phpunit": "^9.2",
    "rector/rector": "^0.15",
    "sensiolabs/behat-page-object-extension": "^2.3",
    "slevomat/coding-standard": "^8.6",
    "squizlabs/php_codesniffer": "^3.7",
{% if version_compare(@('akeneo.major_version'), '6', '>=') %}
    "league/flysystem-aws-s3-v3": "^2.0 || ^3.0",
    "symfony/debug-bundle": "^5.4",
    "symfony/web-profiler-bundle": "^5.4"
{% else %}
    "doctrine/doctrine-migrations-bundle": "1.3.2",
    "league/flysystem-aws-s3-v3": "^1.0",
    "symfony/debug-bundle": "^4.4.7",
    "symfony/web-profiler-bundle": "^4.4.7",
    "symfony/web-server-bundle": "^4.4.7"
{% endif %}
  },
  "scripts": {
    "customise-akeneo-install": [
      "grep -v -E '(docker/|docker-compose|.gitignore|yarn install)' vendor/akeneo/pim-{{ @('akeneo.edition') }}-dev/std-build/install-required-files.sh > vendor/akeneo/pim-{{ @('akeneo.edition') }}-dev/std-build/install-required-files.sh.tmp",
{% if version_compare(@('akeneo.major_version'), '7', '>=') %}
      "echo 'yarn install' >> vendor/akeneo/pim-{{ @('akeneo.edition') }}-dev/std-build/install-required-files.sh.tmp",
{% endif %}
      "mv vendor/akeneo/pim-{{ @('akeneo.edition') }}-dev/std-build/install-required-files.sh.tmp vendor/akeneo/pim-{{ @('akeneo.edition') }}-dev/std-build/install-required-files.sh"
    ],
    "post-update-cmd": [
      "@customise-akeneo-install",
      "bash vendor/akeneo/pim-{{ @('akeneo.edition') }}-dev/std-build/install-required-files.sh"
    ],
    "post-install-cmd": [
      "@customise-akeneo-install",
      "bash vendor/akeneo/pim-{{ @('akeneo.edition') }}-dev/std-build/install-required-files.sh"
    ],
    "post-create-project-cmd": [
      "@customise-akeneo-install",
      "bash vendor/akeneo/pim-{{ @('akeneo.edition') }}-dev/std-build/install-required-files.sh"
    ],
    "test": [
      "@test-production-quality",
      "@test-quality",
      "@test-unit",
      "@test-acceptance"
    ],
    "test-production-quality": [
      "bash -e -o pipefail -c \"find src/ -type f -name '*.php' -print0 | xargs -0 --no-run-if-empty -P 8 -i php -l {} | (grep -v 'No syntax errors detected' || echo OK)\"",
      "composer validate --no-check-publish"
    ],
    "test-quality": [
      "phpcs -p",
      "phpstan analyse",
      "phpmd ./src text ./phpmd.xml"
    ],
    "test-unit": [
      "phpspec run"
    ],
    "test-acceptance": [
      "behat"
    ],
    "fix-code": [
      "phpcbf -p"
    ],
    "compatibility": "bin/phpcs -s --standard=vendor/phpcompatibility/php-compatibility/PHPCompatibility/ --runtime-set testVersion {{ @('php.version') }}-"
  },
  "config": {
    "platform": {
      "php": "{{ @('php.version') }}"
    },
    "allow-plugins": {
      "symfony/flex": true,
      "dealerdirect/phpcodesniffer-composer-installer": true
    }
  },
{% if version_compare(@('akeneo.major_version'), '7', '>=') %}
  "extra": {
    "symfony": {
      "require": "5.4.*"
    }
  },
{% endif %}
  "minimum-stability": "stable"
}
