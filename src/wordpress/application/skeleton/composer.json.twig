{
    "name": "{{ @('workspace.name')|lower }}/wordpress",
    "type": "project",
    "license": "proprietary",
    "require": {
    },
    "require-dev": {
        "behat/behat": "^3.4",
        "behat/mink": "^1.7",
        "behat/mink-extension": "^2.3",
        "behat/mink-goutte-driver": "^1.2",
        "ciaranmcnulty/behat-stepthroughextension": "^1.0",
        "dmore/behat-chrome-extension": "^1.3",
        "dmore/chrome-mink-driver": "^2.6",
        "friends-of-behat/context-service-extension": "^1.2",
        "friends-of-behat/cross-container-extension": "^1.1",
        "friendsofphp/php-cs-fixer": "~2.2.1",
        "lusitanian/oauth": "~0.8.10",
        "pdepend/pdepend": "2.5.2",
        "phpcompatibility/php-compatibility": "dev-master",
        "phpmd/phpmd": "@stable",
        "phpspec/phpspec": "^4.0",
        "phpunit/phpunit": "~6.2.0",
        "sebastian/phpcpd": "2.0.4",
        "sensiolabs/behat-page-object-extension": "^2.1",
        "squizlabs/php_codesniffer": "^3.4.1",
        "wp-coding-standards/wpcs": "^2.1.0"
    },
    "autoload": {
        "psr-0": {
            "": [
                "src"
            ]
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Acceptance\\": "features/bootstrap"
        }
    },
    "minimum-stability": "stable",
    "scripts": {
        "test": [
            "@test-production-quality",
            "@test-quality",
            "@test-unit",
            "@test-acceptance"
        ],
        "test-production-quality": [
            "bash -e -o pipefail -c \"find public/ -type f -name '*.php'  -print0 | xargs -0 --no-run-if-empty -n 1 -P 8 -i php -l {} | (grep -v 'No syntax errors detected' || echo OK)\""
        ],
        "test-quality": [
            "phpcs"
        ],
        "test-unit": [
            "phpspec run"
        ],
        "test-acceptance": [
            "behat"
        ],
        "compatibility": "bin/phpcs -s --standard=vendor/phpcompatibility/php-compatibility/PHPCompatibility/ --runtime-set testVersion 7.2-"
    },
    "config": {
        "bin-dir": "bin",
        "platform": {
            "php": "7.2.30"
        }
    }
}
