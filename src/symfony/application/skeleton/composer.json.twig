{
    "name": "{{ @('workspace.name')|lower }}/symfony",
    "type": "project",
    "license": "proprietary",
    "require": {
        "php": ">=7.2.5",
        "ext-ctype": "*",
        "ext-iconv": "*",
        "symfony/console": "5.1.*",
        "symfony/dotenv": "5.1.*",
        "symfony/flex": "^1.3.1",
        "symfony/framework-bundle": "5.1.*",
        "symfony/yaml": "5.1.*"
    },
    "require-dev": {
        "behat/behat": "^3.5",
        "behat/mink-extension": "^2.3",
        "behat/mink-goutte-driver": "^1.2",
        "behat/mink-browserkit-driver": "dev-master#90c1c9065ee2f41c134b54da1a3e72cc2cd18fd0",
        "dmore/behat-chrome-extension": "^1.3",
        "dmore/chrome-mink-driver": "^2.7",
        "phpcompatibility/php-compatibility": "dev-master",
        "phpmd/phpmd": "^2.7",
        "phpspec/phpspec": "^6.0",
        "phpstan/phpstan": "^0.12",
        "phpunit/phpunit": "^9.3",
        "sensiolabs/behat-page-object-extension": "^2.3",
        "slevomat/coding-standard": "^6.0",
        "squizlabs/php_codesniffer": "^3.5",
        "symfony/phpunit-bridge": "^5.1"
    },
    "config": {
        "bin-dir": "bin",
        "optimize-autoloader": true,
        "platform": {
            "php": "7.3.17"
        },
        "preferred-install": {
            "*": "dist"
        },
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "App\\Tests\\": "tests/",
            "Inviqa\\Acceptance\\": "features/bootstrap"
        }
    },
    "replace": {
        "paragonie/random_compat": "2.*",
        "symfony/polyfill-ctype": "*",
        "symfony/polyfill-iconv": "*",
        "symfony/polyfill-php72": "*",
        "symfony/polyfill-php71": "*",
        "symfony/polyfill-php70": "*",
        "symfony/polyfill-php56": "*"
    },
    "scripts": {
      "auto-scripts": {
          "cache:clear": "symfony-cmd",
          "assets:install %PUBLIC_DIR%": "symfony-cmd"
      },
      "post-install-cmd": [
          "@auto-scripts"
      ],
      "post-update-cmd": [
          "@auto-scripts"
      ],
      "test": [
          "@test-production-quality",
          "@test-quality",
          "@test-unit",
          "@test-acceptance"
      ],
      "test-production-quality": [
          "bash -e -o pipefail -c \"find src/ -type f -name '*.php' -print0 | xargs -0 --no-run-if-empty -n 1 -P 8 -i php -l {} | (grep -v 'No syntax errors detected' || echo OK)\""
      ],
      "test-quality": [
          "phpcs -p",
          "phpstan analyse",
          "phpmd ./src text ./phpmd.xml"
      ],
      "test-unit": [
          "phpspec run"
      ],
      "test-acceptance": [
          "behat"
      ],
      "fix-code": [
          "phpcbf -p"
      ],
      "compatibility": "bin/phpcs -s --standard=vendor/phpcompatibility/php-compatibility/PHPCompatibility/ --runtime-set testVersion 7.3-"
    },
    "conflict": {
        "symfony/symfony": "*"
    },
    "extra": {
        "symfony": {
            "allow-contrib": false,
            "require": "5.1.*"
        }
    },
    "repositories": {
        "mink-browserkit-driver": {
            "type": "vcs",
            "url": "https://github.com/Daniel-Marynicz/MinkBrowserKitDriver.git"
        }
    },
    "minimum-stability": "stable"
}
