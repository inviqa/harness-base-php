{
    "name": "{{ @('workspace.name')|lower }}/symfony",
    "description": "Symfony site for {{ @('workspace.name')|lower }}",
    "type": "project",
    "license": "proprietary",
    "require": {
        "php": ">= 8.0",
        "ext-ctype": "*",
        "ext-iconv": "*",
        "symfony/console": "~5.4",
        "symfony/dotenv": "~5.4",
        "symfony/flex": "^2.1.8",
        "symfony/framework-bundle": "~5.4",
        "symfony/runtime": "~5.4",
        "symfony/translation": "~5.4",
        "symfony/yaml": "~5.4"
    },
    "require-dev": {
        "behat/behat": "^3.5",
        "behat/mink-extension": "^2.3",
        "behat/mink-goutte-driver": "^1.2",
        "behat/mink-browserkit-driver": "dev-master#90c1c9065ee2f41c134b54da1a3e72cc2cd18fd0",
        "dmore/behat-chrome-extension": "^1.3",
        "dmore/chrome-mink-driver": "^2.7",
        "phpcompatibility/php-compatibility": "dev-master",
        "phpmd/phpmd": "^2.7",
        "phpspec/phpspec": "^7.0",
        "phpstan/phpstan": "^0.12",
        "phpstan/phpstan-symfony": "^0.12",
        "phpunit/phpunit": "^9.3",
        "sensiolabs/behat-page-object-extension": "^2.3",
        "slevomat/coding-standard": "^6.0",
        "squizlabs/php_codesniffer": "^3.5",
        "symfony/phpunit-bridge": "^5.2"
    },
    "config": {
        "allow-plugins": {
            "symfony/flex": true,
            "symfony/runtime": true
        },
        "bin-dir": "bin",
        "optimize-autoloader": true,
        "platform": {
            "php": "8.0.2"
        },
        "preferred-install": {
            "*": "dist"
        },
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "App\\Tests\\": "tests/",
            "Inviqa\\Acceptance\\": "features/bootstrap"
        }
    },
    "replace": {
        "paragonie/random_compat": "2.*",
        "symfony/polyfill-ctype": "*",
        "symfony/polyfill-iconv": "*",
        "symfony/polyfill-php72": "*",
        "symfony/polyfill-php71": "*",
        "symfony/polyfill-php70": "*",
        "symfony/polyfill-php56": "*"
    },
    "scripts": {
        "auto-scripts": {
            "cache:clear": "symfony-cmd",
            "assets:install %PUBLIC_DIR%": "symfony-cmd"
        },
        "post-install-cmd": [
            "@auto-scripts"
        ],
        "post-update-cmd": [
            "@auto-scripts"
        ],
        "test": [
            "@test-production-quality",
            "@test-quality",
            "@test-unit",
            "@test-acceptance"
        ],
        "test-production-quality": [
            "bash -e -o pipefail -c \"find src/ -type f -name '*.php' -print0 | xargs -0 --no-run-if-empty -n 1 -P 8 -i php -l {} | (grep -v 'No syntax errors detected' || echo OK)\"",
            "composer validate --no-check-publish"
        ],
        "test-quality": [
            "phpcs -p",
            "@phpstan",
            "phpmd ./src text ./phpmd.xml"
        ],
        "test-unit": [
            "phpspec run"
        ],
        "test-acceptance": [
            "behat"
        ],
        "fix-code": [
            "phpcbf -p"
        ],
        "phpstan": [
            "APP_DEBUG=1 bin/console cache:warmup --env=dev",
            "phpstan analyse"
        ],
        "compatibility": "bin/phpcs -s --standard=vendor/phpcompatibility/php-compatibility/PHPCompatibility/ --runtime-set testVersion 8.0-"
    },
    "conflict": {
        "symfony/symfony": "*"
    },
    "extra": {
        "symfony": {
            "allow-contrib": false,
            "require": "5.4.*"
        }
    },
    "repositories": {
        "mink-browserkit-driver": {
            "type": "vcs",
            "url": "https://github.com/Daniel-Marynicz/MinkBrowserKitDriver.git"
        }
    },
    "minimum-stability": "stable"
}
