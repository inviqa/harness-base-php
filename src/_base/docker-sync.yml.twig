version: '2'
options:
  compose-file-path:
    - docker-compose.yml
  project_root: config_path
syncs:
  {{ @('workspace.name') }}-sync:
    src: ./
    sync_userid: '1000'
    sync_excludes_type: BelowPath
    sync_excludes: &IGNORE
      - .docker-sync
      - .idea
      - .git
      - var
    watch_excludes: *IGNORE
