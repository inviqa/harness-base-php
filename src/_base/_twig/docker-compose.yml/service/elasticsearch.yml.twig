  elasticsearch:
    image: {{ @('services.elasticsearch.image') }}
    labels:
      - traefik.enable=false
    environment:
      ES_JAVA_OPTS: -Xms512m -Xmx512m
      discovery.type: single-node
    networks:
      - private
{% if @('app.build') != 'static' and @('docker.port_forward.enabled') %}
    ports:
      - "127.0.0.1:0:9200"
      - "127.0.0.1:0:9300"
{% endif %}
